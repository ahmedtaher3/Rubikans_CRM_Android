<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/pharmacy_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_label_no_pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_no_pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22220"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintTop_toTopOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintStart_toStartOf="@+id/tv_count"/>


            <TextView
                android:id="@+id/tv_label_name_pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintStart_toEndOf="@+id/tv_no_pharmacy"/>
            <TextView
                android:id="@+id/tv_name_pharmacy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="adsfdasfasdf"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_name_pharmacy"
                app:layout_constraintTop_toTopOf="@+id/tv_label_name_pharmacy"
                app:layout_constraintStart_toStartOf="@id/tv_vouchers_count"/>
            <TextView
                android:id="@+id/tv_label_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/count"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_name_pharmacy" />
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="222220"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_count"
                app:layout_constraintStart_toEndOf="@+id/tv_label_count"
                app:layout_constraintTop_toTopOf="@+id/tv_label_count" />
            <TextView
                android:id="@+id/tv_label_vouchers_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_vouchers_count"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/tv_label_count"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_count"
                app:layout_constraintStart_toStartOf="@id/tv_label_name_pharmacy"/>
            <TextView
                android:id="@+id/tv_vouchers_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5050"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_vouchers_count"
                app:layout_constraintTop_toTopOf="@+id/tv_label_vouchers_count"
                app:layout_constraintStart_toEndOf="@+id/tv_label_vouchers_count"/>


            <TextView
                android:id="@+id/tv_label_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/used"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_count" />
            <TextView
                android:id="@+id/tv_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22220"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_used"
                app:layout_constraintStart_toStartOf="@id/tv_count"
                app:layout_constraintTop_toTopOf="@+id/tv_label_used" />
            <TextView
                android:id="@+id/tv_label_not_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_not_used"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/tv_label_used"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_used"
                app:layout_constraintStart_toStartOf="@id/tv_label_name_pharmacy"/>
            <TextView
                android:id="@+id/tv_not_used"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5050"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_not_used"
                app:layout_constraintTop_toTopOf="@+id/tv_label_not_used"
                app:layout_constraintStart_toStartOf="@id/tv_vouchers_count"/>

            <TextView
                android:id="@+id/tv_label_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_used" />
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accepted"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_status"
                app:layout_constraintStart_toStartOf="@id/tv_count"
                app:layout_constraintTop_toTopOf="@+id/tv_label_status" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_blue"
                android:text="@string/show_vouchers"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_label_not_used" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>