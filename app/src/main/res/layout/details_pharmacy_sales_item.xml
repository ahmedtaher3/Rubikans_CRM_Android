<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/pharmacy_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_label_no_pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discount"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_update_date"
                app:layout_constraintEnd_toStartOf="@id/tv_no_pharmacy"/>
            <TextView
                android:id="@+id/tv_no_pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.12%"
                android:textColor="@color/color_142c48"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintTop_toTopOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_name_pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="adsfdasfasdf"
                android:textColor="@color/color_142c48"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



            <TextView
                android:id="@+id/tv_label_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_update_date"
                app:layout_constraintBottom_toBottomOf="@+id/tv_update_date"/>

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textColor="@color/color_142c48"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/tv_total"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_start_date"
                app:layout_constraintTop_toTopOf="@+id/tv_label_start_date" />

            <TextView
                android:id="@+id/tv_label_update_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Price"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                app:layout_constraintStart_toStartOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_pharmacy"/>
            <TextView
                android:id="@+id/tv_update_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1250egp"
                android:textColor="@color/color_142c48"
                android:textSize="12sp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_update_date"
                app:layout_constraintTop_toTopOf="@+id/tv_label_update_date"/>

            <TextView
                android:id="@+id/tv_label_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="@id/tv_label_start_date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_start_date"/>
            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4500egp"
                android:textColor="@color/color_142c48"
                android:textSize="12sp"
                android:layout_marginStart="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_total"
                app:layout_constraintTop_toTopOf="@+id/tv_label_total"
                app:layout_constraintStart_toEndOf="@id/tv_label_total"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>