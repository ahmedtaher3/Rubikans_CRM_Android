<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/pharmacy_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_label_no_pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_no_pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22220"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginStart="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintTop_toTopOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintStart_toEndOf="@id/tv_label_no_pharmacy" />

            <TextView
                android:id="@+id/tv_name_pharmacy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="50/50/5050"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintTop_toTopOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_blue"
                android:text="@string/delivered"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_label_no_pharmacy"
                app:layout_constraintTop_toTopOf="@id/tv_label_no_pharmacy" />

            <TextView
                android:id="@+id/tv_label_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_from"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_label_no_pharmacy"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_no_pharmacy" />

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="222220"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_from"
                app:layout_constraintStart_toStartOf="@id/tv_no_pharmacy"
                app:layout_constraintTop_toTopOf="@+id/tv_label_from" />

            <TextView
                android:id="@+id/tv_label_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_to"
                android:textColor="@color/blue"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/tv_label_from"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_from"
                app:layout_constraintStart_toEndOf="@id/tv_from"/>
            <TextView
                android:id="@+id/tv_vouchers_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5050"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_to"
                app:layout_constraintTop_toTopOf="@+id/tv_label_to"
                app:layout_constraintStart_toEndOf="@+id/tv_label_to"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>