<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bg_curve_left_right_color_white">


        <TextView
            android:id="@+id/tv_rate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_rate_rider"
            android:textColor="@color/color_142c48"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_cancel_dialog" />
        <TextView
            android:id="@+id/tv_rate_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_rate_rider2"
            android:textColor="@color/color_142c48"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_rate_txt" />
        <RatingBar
            android:id="@+id/tv_rate_rating"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            style="@style/CustomRatingBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_rate_txt2" />

        <ImageView
            android:id="@+id/iv_cancel_dialog"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:src="@drawable/ic_pre_declined"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_rate_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:hint="@string/label_type_your_message_here"
            android:padding="10dp"
            android:textColor="@color/color_142c48"
            android:inputType="text"
            android:background="@drawable/bg_search"
            android:textColorHint="@color/colorGray3"
            app:layout_constraintEnd_toEndOf="@+id/tv_rate_rating"
            app:layout_constraintStart_toStartOf="@+id/tv_rate_rating"
            app:layout_constraintTop_toBottomOf="@+id/tv_rate_rating" />


        <Button
            android:id="@+id/btn_rate_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/bg_blue"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="@string/label_submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/et_rate_msg"
            app:layout_constraintStart_toStartOf="@id/et_rate_msg"
            app:layout_constraintTop_toBottomOf="@+id/et_rate_msg" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
